{
  "extends": "@vue/tsconfig/tsconfig.lib.json",
  "include": ["core/**/*.ts", "index.ts"],
  "exclude": ["__tests__/**", "dist/**"],
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "skipLibCheck": true,
    "verbatimModuleSyntax": true,
    "noImplicitAny": false,
    "strict": true,
    "outDir": "dist",
    "declarationDir": "dist/types"
  }
}
