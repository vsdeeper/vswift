{
  "extends": "@vue/tsconfig/tsconfig.lib.json",
  "include": ["packages/utils/**/*.ts"],
  "exclude": ["packages/utils/**/__tests__/*", "packages/utils/dist/**/*"],
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "skipLibCheck": true,
    "verbatimModuleSyntax": true,
    "noImplicitAny": false,
    "strict": true,
    "outDir": "packages/utils/dist",
    "declarationDir": "packages/utils/dist/types"
  }
}
