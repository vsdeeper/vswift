{
  "version": "0.0.0",
  "type": "module",
  "engines": {
    "node": ">=18",
    "npm": ">=10",
    "pnpm": ">=8"
  },
  "keywords": [
    "@vswift/cli",
    "@vswift/components",
    "@vswift/utils"
  ],
  "scripts": {
    "dev:com": "pnpm --dir ./packages/components dev",
    "dev:cli": "tsc --watch --project tsconfig.cli.json",
    "dev:upg": "tsc --watch --project tsconfig.unplugin.json",
    "build": "vswift build",
    "release": "vswift release",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "format": "prettier --write packages/"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@rushstack/eslint-patch": "^1.8.0",
    "@tsconfig/node20": "^20.1.4",
    "@types/node": "^20.12.5",
    "@vitejs/plugin-vue": "^5.0.4",
    "@vswift/cli": "workspace:*",
    "@vue/eslint-config-prettier": "^9.0.0",
    "@vue/eslint-config-typescript": "^13.0.0",
    "@vue/tsconfig": "^0.5.1",
    "eslint": "^8.57.0",
    "eslint-plugin-vue": "^9.23.0",
    "npm-run-all2": "^6.1.2",
    "prettier": "^3.2.5",
    "typescript": "~5.4.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/vsdeeper/vswift.git"
  }
}
