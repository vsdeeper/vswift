{
  "include": ["packages/unplugin/**/*.ts"],
  "exclude": ["packages/unplugin/**/__tests__/*", "packages/unplugin/dist/**/*"],
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "verbatimModuleSyntax": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "noEmit": false,
    "declaration": true,
    "declarationDir": "packages/unplugin/dist/types",
    "strict": true,
    "outDir": "packages/unplugin/dist"
  }
}
